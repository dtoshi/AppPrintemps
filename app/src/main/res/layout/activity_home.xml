<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondohome"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="415dp"
        android:layout_height="843dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="368dp"
                    android:layout_height="231dp"
                    android:layout_marginTop="32dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/foreground_text"
                        android:scaleType="centerCrop">

                        <LinearLayout
                            android:layout_width="377dp"
                            android:layout_height="228dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView0"
                                android:layout_width="match_parent"
                                android:layout_height="143dp"
                                android:backgroundTint="@android:color/transparent"
                                app:srcCompat="@drawable/logo" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bienvenido"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtUsuarioNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/andika"
                                android:textAlignment="center"
                                android:textColor="#604F4F"
                                android:textSize="28sp" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="385dp"
                    android:layout_height="319dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ViewFlipper
                            android:id="@+id/slider"
                            android:layout_width="388dp"
                            android:layout_height="321dp"
                            android:autoStart="true"
                            android:flipInterval="2000"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></ViewFlipper>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="377dp"
                    android:layout_height="324dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/foreground_text">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/btnCatalogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="101dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/iconocatalogo"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Catálogo"
                                    android:textAlignment="center"
                                    android:textColor="#64747C"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/btnPerfil"
                                    android:layout_width="match_parent"
                                    android:layout_height="101dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/iconocuenta"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mi Perfil"
                                    android:textAlignment="center"
                                    android:textColor="#64747C"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="20dp">

                            <LinearLayout
                                android:layout_width="185dp"
                                android:layout_height="140dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/btnAcercade"
                                    android:layout_width="match_parent"
                                    android:layout_height="101dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/equipo"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Acerca de"
                                    android:textAlignment="center"
                                    android:textColor="#64747C"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="140dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/btnCerrarSesion"
                                    android:layout_width="match_parent"
                                    android:layout_height="101dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/cerrarsesion"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Cerrar Sesión"
                                    android:textAlignment="center"
                                    android:textColor="#64747C"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </TableRow>

                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="248dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>