<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacerca"
    tools:context=".AcercaDeActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="846dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="390dp"
                    android:layout_height="248dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/foreground_text"
                        android:scaleType="centerCrop">

                        <VideoView
                            android:id="@+id/vw"
                            android:layout_width="371dp"
                            android:layout_height="229dp"
                            android:layout_gravity="center|fill|fill_horizontal|fill_vertical"
                            android:foregroundGravity="fill_horizontal|fill_vertical|fill"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.526"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.526" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="393dp"
                    android:layout_height="523dp"
                    android:layout_marginTop="16dp"
                    android:paddingTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView7">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/foreground_text">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="260dp"
                            android:layout_height="53dp"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/bad_script"
                            android:text="Quienes Somos"
                            android:textAlignment="center"
                            android:textColor="#BFE91E63"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="338dp"
                            android:layout_height="191dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="178dp"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif-light"
                                android:paddingTop="10dp"
                                android:text="Hola,somos Printemps! Somos una empresa experta en el reparto de flores. En cada una de nuestras creaciones plasmasmos la pasion por las flores y el diseño."
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="139dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/quienessomos" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout6"
                            android:layout_width="336dp"
                            android:layout_height="196dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.526"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="411dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/nuestros_servicios" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="405dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-light"
                                android:text="¿Has oido hablar de pedir tus flores desde una app? Printemps te ofrece cientos de diseños y especies de flores segun tus gustos con la mayor calidad posible desde un simple click."
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView8"
                    android:layout_width="396dp"
                    android:layout_height="340dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView6">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/foreground_text"
                        android:scaleType="centerCrop">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="362dp"
                            android:layout_height="51dp"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/bad_script"
                            android:text="Nuestras Redes"
                            android:textAlignment="center"
                            android:textColor="#BFE91E63"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.502"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="370dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.555"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8">

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="facebook"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/facebook"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="instagram"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/instagram"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageButton
                                android:id="@+id/imageButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="twitter"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/twitter"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="368dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/bad_script"
                            android:text="Contactanos"
                            android:textAlignment="center"
                            android:textColor="#BFE91E63"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.502"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

                        <LinearLayout
                            android:layout_width="346dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView13">

                            <ImageButton
                                android:id="@+id/imageButton4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="Marcado"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/llamada"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <ImageButton
                                android:id="@+id/imageButton5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:onClick="Maps"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/iconomapa"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="209dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnVolverHomedeAcerca"  />

                <Button
                    android:id="@+id/btnVolverHomedeAcerca"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_radius"
                    android:fontFamily="@font/bad_script"
                    android:onClick="VolverHome"
                    android:text="Volver al Home"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView8" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="390dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="44dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/banneracercade" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>